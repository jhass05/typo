<div class="bordered">
  <h3><%= _("Latest Comments") %></h3>
  <ul>
    <% if @comments.size == 0 %>
      <li><%= _("No comments yet") %></li>
    <% else %>
      <% for comment in @comments -%>
        <li>
          <%= link_to_permalink comment, h(_("By %s on %s", comment.author, comment.article.title)) %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
